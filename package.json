{
  "name": "identity-service",
  "version": "1.0.0",
  "description": "Platform Dashboard Authentication Service",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:db-layer": "tsx src/test-db-layer.ts",
    "migrate": "tsx src/infrastructure/migrations.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "fastify": "^4.26.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^8.5.0",
    "kysely": "^0.27.3",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "openid-client": "^5.6.4",
    "jsonwebtoken": "^9.0.2",
    "@sinclair/typebox": "^0.32.15",
    "@fastify/type-provider-typebox": "^4.0.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "tsx": "^4.7.1",
    "vitest": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "prettier": "^3.2.5"
  }
}